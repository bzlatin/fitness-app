{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "jsx": "react-native",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["react", "react-native", "react-native-reanimated"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "App.tsx"],
  "exclude": ["node_modules", "**/node_modules/**", "**/*.spec.ts"],
  "extends": "expo/tsconfig.base"
}
